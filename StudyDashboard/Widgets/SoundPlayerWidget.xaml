<local:DraggableWidget x:Class="StudyDashboard.SoundPlayerWidget"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:local="clr-namespace:StudyDashboard">
    
    <Border Style="{StaticResource WidgetStyle}">
        <StackPanel>
            <TextBlock Text="Sound Player" Style="{StaticResource HeaderTextStyle}"/>
            
            <TextBlock x:Name="StatusText" Text="No track is playing" 
                      Style="{StaticResource ContentTextStyle}" Margin="0,0,0,10"/>
            
            <!-- URLå…¥åŠ› -->
            <TextBox x:Name="UrlTextBox" 
                    Background="#40FFFFFF" Foreground="White" BorderBrush="#60FFFFFF"
                    Padding="5" Margin="0,0,0,5"
                    Text="https://www.youtube.com/watch?v=example"/>
            
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="PlayButton" Content="Play URL" Grid.Column="0"
                       Background="#FF2196F3" Foreground="White" BorderThickness="0"
                       Padding="5" Margin="0,0,5,0" Click="PlayButton_Click"/>
                <Button x:Name="StopButton" Content="Stop" Grid.Column="1"
                       Background="#FFF44336" Foreground="White" BorderThickness="0"
                       Padding="5" Width="60" Click="StopButton_Click"/>
            </Grid>
            
            <!-- å†ç”Ÿãƒãƒ¼ -->
            <StackPanel Margin="0,10">
                <TextBlock Text="Progress" Style="{StaticResource ContentTextStyle}" Margin="0,0,0,5"/>
                <Grid>
                    <ProgressBar x:Name="PlaybackProgress" Height="8" Background="#40FFFFFF" 
                                Foreground="#FF2196F3" Value="0" Maximum="100"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="CurrentTimeText" Text="00:00" Style="{StaticResource ContentTextStyle}" FontSize="10"/>
                        <TextBlock Text=" / " Style="{StaticResource ContentTextStyle}" FontSize="10"/>
                        <TextBlock x:Name="TotalTimeText" Text="00:00" Style="{StaticResource ContentTextStyle}" FontSize="10"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
            
            <!-- éŸ³é‡ã‚³ãƒ³ãƒˆãƒ­ãƒ¼ãƒ« -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Volume" Style="{StaticResource ContentTextStyle}" 
                          VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Slider x:Name="VolumeSlider" Width="120" Minimum="0" Maximum="100" Value="50"
                       VerticalAlignment="Center" ValueChanged="VolumeSlider_ValueChanged"/>
                <TextBlock x:Name="VolumeText" Text="50%" Style="{StaticResource ContentTextStyle}"
                          VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
            
            <!-- ãƒ—ãƒªã‚»ãƒƒãƒˆ -->
            <TextBlock Text="Library" Style="{StaticResource ContentTextStyle}" Margin="0,10,0,5"/>
            
            <StackPanel>
                <Button Content="Lo-Fi Hip Hop Radio" Background="#40FFFFFF" Foreground="White" 
                       BorderThickness="0" Padding="5" Margin="0,2" 
                       HorizontalAlignment="Stretch" Click="PresetButton_Click"
                       Tag="https://www.youtube.com/watch?v=jfKfPfyJRdk"/>
                <Button Content="Rain Sounds" Background="#40FFFFFF" Foreground="White" 
                       BorderThickness="0" Padding="5" Margin="0,2" 
                       HorizontalAlignment="Stretch" Click="PresetButton_Click"
                       Tag="https://www.youtube.com/watch?v=q76bMs-NwRk"/>
                <Button Content="ðŸŽµ Open Spotify" Background="#1DB954" Foreground="White" 
                       BorderThickness="0" Padding="8" Margin="0,5" 
                       HorizontalAlignment="Stretch" Click="OpenSpotify_Click"
                       FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Border>
</local:DraggableWidget>