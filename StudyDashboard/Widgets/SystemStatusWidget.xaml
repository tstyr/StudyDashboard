<local:DraggableWidget x:Class="StudyDashboard.SystemStatusWidget"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="clr-namespace:StudyDashboard">
    
    <Border Style="{StaticResource WidgetStyle}" Padding="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <!-- 上段 -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <!-- CPU使用率 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="CPU:" Style="{StaticResource ContentTextStyle}" FontSize="10"/>
                    <TextBlock x:Name="CpuUsageText" Text="45%" Style="{StaticResource ContentTextStyle}" 
                              FontSize="10" Margin="5,0,0,0"/>
                </StackPanel>
                
                <!-- CPU温度 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Temp:" Style="{StaticResource ContentTextStyle}" FontSize="10"/>
                    <TextBlock x:Name="CpuTempText" Text="65°C" Style="{StaticResource ContentTextStyle}" 
                              FontSize="10" Margin="5,0,0,0"/>
                </StackPanel>
                
                <!-- メモリ使用率 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="RAM:" Style="{StaticResource ContentTextStyle}" FontSize="10"/>
                    <TextBlock x:Name="MemoryUsageText" Text="8.2GB" Style="{StaticResource ContentTextStyle}" 
                              FontSize="10" Margin="5,0,0,0"/>
                </StackPanel>
                
                <!-- GPU使用率 -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="GPU:" Style="{StaticResource ContentTextStyle}" FontSize="10"/>
                    <TextBlock x:Name="GpuUsageText" Text="25%" Style="{StaticResource ContentTextStyle}" 
                              FontSize="10" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
            
            <!-- 下段 -->
            <Grid Grid.Row="1" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <!-- ディスク使用率 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Disk:" Style="{StaticResource ContentTextStyle}" FontSize="10"/>
                    <TextBlock x:Name="DiskUsageText" Text="45%" Style="{StaticResource ContentTextStyle}" 
                              FontSize="10" Margin="5,0,0,0"/>
                </StackPanel>
                
                <!-- ネットワーク -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Net:" Style="{StaticResource ContentTextStyle}" FontSize="10"/>
                    <TextBlock x:Name="NetworkText" Text="↓1.2MB/s" Style="{StaticResource ContentTextStyle}" 
                              FontSize="10" Margin="5,0,0,0"/>
                </StackPanel>
                
                <!-- 時刻（ミリ秒まで） -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="TimeText" Text="14:30:25.123" Style="{StaticResource ContentTextStyle}" 
                              FontSize="10" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</local:DraggableWidget>