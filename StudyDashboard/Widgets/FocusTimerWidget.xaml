<local:DraggableWidget x:Class="StudyDashboard.FocusTimerWidget"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:StudyDashboard">
    
    <Border Style="{StaticResource WidgetStyle}">
        <StackPanel Margin="5">
            <TextBlock Text="Timer" Style="{StaticResource ContentTextStyle}" FontSize="11" Opacity="0.7"/>
            <TextBlock Text="Focus Timer" Style="{StaticResource HeaderTextStyle}" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,5"/>
            
            <!-- タイマー表示 -->
            <TextBlock x:Name="TimerDisplay" Text="25:00" 
                      FontSize="72" FontWeight="Bold" 
                      Foreground="White" HorizontalAlignment="Center"
                      Margin="0,10,0,5"/>
            
            <!-- モード表示 -->
            <TextBlock x:Name="ModeText" Text="Mode: Focus (0 sessions complete)" 
                      Style="{StaticResource ContentTextStyle}" 
                      HorizontalAlignment="Center" Margin="0,0,0,10" Opacity="0.8"/>
            
            <!-- プログレスバー -->
            <Border Background="#30FFFFFF" CornerRadius="3" Height="16" Margin="5,5,5,10">
                <ProgressBar x:Name="TimerProgress" Height="16" 
                            Background="Transparent" Foreground="#FF4A90D9"
                            BorderThickness="0"/>
            </Border>
            
            <!-- メインボタン -->
            <Grid Margin="5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="PauseButton" Content="Pause" Grid.Column="0" 
                       Background="#50FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#80FFFFFF"
                       Margin="2" Padding="10,8" FontSize="13" Click="PauseButton_Click"/>
                <Button x:Name="CompleteButton" Content="Complete" Grid.Column="1"
                       Background="#50FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#80FFFFFF"
                       Margin="2" Padding="10,8" FontSize="13" Click="CompleteButton_Click"/>
                <Button x:Name="ResetButton" Content="Reset" Grid.Column="2"
                       Background="#50FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#80FFFFFF"
                       Margin="2" Padding="10,8" FontSize="13" Click="ResetButton_Click"/>
            </Grid>
            
            <!-- ブレイクボタン -->
            <Grid Margin="5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="ShortBreakBtn" Content="Start Break (5 min)" Grid.Column="0"
                       Background="#50FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#80FFFFFF"
                       Margin="2" Padding="10,8" FontSize="12" Click="ShortBreakButton_Click"/>
                <Button x:Name="LongBreakBtn" Content="Start Long Break (15 min)" Grid.Column="1"
                       Background="#50FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#80FFFFFF"
                       Margin="2" Padding="10,8" FontSize="12" Click="LongBreakButton_Click"/>
            </Grid>
            
            <!-- 時間設定 -->
            <TextBlock Text="Durations (minutes)" Style="{StaticResource ContentTextStyle}" Margin="5,15,0,8" FontSize="12"/>
            
            <Border Background="#25FFFFFF" CornerRadius="5" Padding="10" Margin="5,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Focus" Grid.Row="0" Grid.Column="0" Style="{StaticResource ContentTextStyle}" 
                              VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12"/>
                    <Border Grid.Row="0" Grid.Column="1" Background="#40FFFFFF" CornerRadius="3" Margin="0,2">
                        <TextBox x:Name="FocusDurationBox" Text="25" 
                                Background="Transparent" Foreground="White" BorderThickness="0"
                                Padding="8,5" VerticalContentAlignment="Center" TextChanged="DurationChanged"/>
                    </Border>
                    
                    <TextBlock Text="Short Break" Grid.Row="0" Grid.Column="2" Style="{StaticResource ContentTextStyle}" 
                              VerticalAlignment="Center" Margin="20,0,10,0" FontSize="12"/>
                    <Border Grid.Row="0" Grid.Column="3" Background="#40FFFFFF" CornerRadius="3" Margin="0,2">
                        <TextBox x:Name="ShortBreakBox" Text="5" 
                                Background="Transparent" Foreground="White" BorderThickness="0"
                                Padding="8,5" VerticalContentAlignment="Center" TextChanged="DurationChanged"/>
                    </Border>
                    
                    <TextBlock Text="Long Break" Grid.Row="1" Grid.Column="0" Style="{StaticResource ContentTextStyle}" 
                              VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12"/>
                    <Border Grid.Row="1" Grid.Column="1" Background="#40FFFFFF" CornerRadius="3" Margin="0,2">
                        <TextBox x:Name="LongBreakBox" Text="15" 
                                Background="Transparent" Foreground="White" BorderThickness="0"
                                Padding="8,5" VerticalContentAlignment="Center" TextChanged="DurationChanged"/>
                    </Border>
                    
                    <TextBlock Text="Interval" Grid.Row="1" Grid.Column="2" Style="{StaticResource ContentTextStyle}" 
                              VerticalAlignment="Center" Margin="20,0,10,0" FontSize="12"/>
                    <Border Grid.Row="1" Grid.Column="3" Background="#40FFFFFF" CornerRadius="3" Margin="0,2">
                        <TextBox x:Name="IntervalBox" Text="4" 
                                Background="Transparent" Foreground="White" BorderThickness="0"
                                Padding="8,5" VerticalContentAlignment="Center" TextChanged="DurationChanged"/>
                    </Border>
                </Grid>
            </Border>
            
            <!-- サウンド設定 -->
            <TextBlock Text="Sounds" Style="{StaticResource ContentTextStyle}" Margin="5,15,0,8" FontSize="12"/>
            
            <Border Background="#25FFFFFF" CornerRadius="5" Padding="10" Margin="5,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Focus Sound" Style="{StaticResource ContentTextStyle}" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="12"/>
                    <Slider x:Name="FocusSoundSlider" Width="150" Minimum="0" Maximum="100" Value="50" VerticalAlignment="Center"/>
                    <TextBlock x:Name="FocusSoundText" Text="50%" Style="{StaticResource ContentTextStyle}" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="12"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</local:DraggableWidget>
